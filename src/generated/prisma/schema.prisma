datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "src/generated/prisma"
}

model Events {
  id            Int          @id @default(autoincrement())
  title         String
  location      String
  status        EventStatus
  createdAt     DateTime     @default(now())
  eventDate     DateTime
  generatedLink String?
  surveyLink    SurveyLinks?
}

enum EventStatus {
  ACTIVE
  PENDING
  COMPLETED
}

model SurveyLinks {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  status        LinkStatus
  generatedLink String?
  event         Events?    @relation(fields: [eventId], references: [id])
  eventId       Int?       @unique

  responses SurveyResponses[]
}

enum LinkStatus {
  ACTIVE
  INACTIVE
}

model SurveyResponses {
  id          Int      @id @default(autoincrement())
  submittedAt DateTime @default(now())
  name        String
  rating      Int
  feedback    String

  surveyLink SurveyLinks? @relation(fields: [linkId], references: [id])
  linkId     Int?         @unique
}
